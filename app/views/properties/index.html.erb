<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Property</th>
      <th>Name</th>
      <th>Address</th>
      <th>Size</th>
      <th>Available</th>
      <th>Earliest start date</th>
      <th>Apply fee</th>
      <th>Rent</th>
      <th>Occupied by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.property_id %></td>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.size %></td>
        <td><%= property.terms_available %></td>
        <td><%= property.earliest_start_date %></td>
        <td><%= property.apply_fee %></td>
        <td><%= property.rent %></td>
        <td><%= property.occupied_by %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

